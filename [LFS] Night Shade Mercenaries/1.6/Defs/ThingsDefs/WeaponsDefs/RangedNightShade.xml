<Defs>
    <!-- ==================== AR-T500 (Assault Rifle) ================================ -->
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_ART500_NS</defName>
        <label>AR-T500 "Assault Rifle"</label>
        <description>The AR-T500 is a standard charge rifle, with a built in plasma infuser</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Things/Weapons/AR-T500</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        
        <recipeMaker>
            <researchPrerequisite>PlasmaInfushedWeapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>Building_PlasmaForge</li>
            </recipeUsers>
        </recipeMaker>

        <weaponTags>
            <li>NightShadeStandard</li>
        </weaponTags>

        <statBases>
            <Mass>6</Mass>
            <MarketValue>1250</MarketValue>
            <WorkToMake>45000</WorkToMake>
            <AccuracyTouch>0.80</AccuracyTouch>
            <AccuracyShort>0.80</AccuracyShort>
            <AccuracyMedium>0.75</AccuracyMedium>
            <AccuracyLong>0.80</AccuracyLong>
            <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
        </statBases>
        
        <costList>
            <Steel>30</Steel>
            <Plasteel>60</Plasteel>
            <ComponentSpacer>3</ComponentSpacer>
            <ComponentIndustrial>1</ComponentIndustrial>
            <Shadum_Horn>1</Shadum_Horn>
        </costList>
        
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>NS_Bullet_P21_Standard</defaultProjectile>
                <warmupTime>1</warmupTime>
                <range>60</range>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <burstShotCount>4</burstShotCount>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>11</muzzleFlashScale>
            </li>
        </verbs>
        
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        
    </ThingDef>
    
